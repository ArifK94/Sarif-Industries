@model Sarif_Industries.View_Models.AccountProfile


<html>
<head>

    @{
        ViewBag.Title = "Orders";
    }
</head>

<body class="animsition">
    <div class="limiter">



        <section class="cart bgwhite p-t-70 p-b-100">
            <div class="container">
                <!-- Cart item -->
                <div class="container-table-cart pos-relative">
                    <div class="wrap-table-shopping-cart bgwhite">

                        @foreach (var order in Model.Orders)
                        {
                            foreach (var product in Model.Products)
                            {
                                if (order.ProductId == product.ProductId)
                                {

                                    <div class="panel-body">
                                        <div class="row">

                                            @foreach (var image in Model.ProductImage)
                                            {
                                                if (image.ProductId == order.ProductId)
                                                {
                                                    <div class="col-xs-2">
                                                        <img class="img-responsive" src="@image.FilePath">
                                                    </div>
                                                }
                                            }

                                            <div class="col-xs-4">
                                                <h4 class="product-name"><strong>@product.Name</strong></h4>
                                                <h4><small>Colour: @order.Colour</small></h4>
                                                <h4><small>Quantity: @order.Quantity</small></h4>
                                            </div>
                                            <div class="col-xs-6">
                                                <div class="col-xs-6 text-right">
                                                    <h4>£@order.Total</h4>
                                                </div>
                                                <div class="col-xs-2">
                                                    <h4>@order.OrderDate</h4>
                                                </div>
                                            </div>
                                        </div>
                                        <hr>
                                    </div>
                                }
                            }
                        }
                    </div>
                </div>
            </div>
        </section>
    </div>
</body>
</html>
